@model IEnumerable<MailPro.CategoryTable>

@{
    ViewBag.Title = "ShowCategory";
}

<h2>ShowCategory</h2>

<p>
    @Html.ActionLink("Create New", "AddCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FacultyID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyID)
        </td>
        <td>
            @Html.ActionLink("Add Student", "AddStudentToCategory", new { CategoryID=item.CategoryID }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { CategoryID=item.CategoryID })
        </td>
    </tr>
}

</table>
