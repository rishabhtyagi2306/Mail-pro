@model MailPro.Models.Membership



<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOGIN PAGE</title>
    <link rel="stylesheet" href="@Url.Content("../files/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("../css/login.css")" type="text/css">

    <link rel="stylesheet" href="@Url.Content("../files/bootstrap.min.css")">


    <script src="@Url.Content("../files/jquery-3.4.1.min.js")"></script>
    <script src="@Url.Content("../files/bootstrap.min.js")"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</head>
@using (Html.BeginForm(new { @id = "" }))
{
    <body>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6" id="back">
                    <div class="row ml-1 mt-1">
                        <div class="col-2 ">
                            <img src="../img/LOGO2.png" style="width: 75px; height:auto" id="logo">

                        </div>
                        <div class="col-9 text-white text-left mt-3 ml-n5">
                            <b class="m-1" style="font-family:Consolas, Andale Mono, Lucida Console, Lucida Sans Typewriter, Monaco, Courier New, monospace; font-size: 25px">MAIL PRO</b>
                        </div>
                    </div>
                    
                    <div class="welcome">
                        <div>Welcome Back!</div>
                        <div id="sign">Sign in to continue access</div>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-lg-12 mb-3 ml-2">
                            <div class="signin"><b>SIGN IN</b></div>
                        </div>

                    </div>
       
                    <div class="text-danger" style="top: 42%; right: 25%; position: fixed">
                        @ViewBag.Msg
                    </div>
                    <div class="form-group row ml-5 mt-3" style="padding-top:175px">
                        <!--<label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>-->
                        @Html.LabelFor(model => model.FacultyEmail, htmlAttributes: new { @class = " col-sm-2 col form label", @id = "inputEmail13" })
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.FacultyEmail, new
                       {
                           htmlAttributes = new { @class = "form-control", @id = "inputEmail13", @placeholder = "Email" }
                       })
                            @Html.ValidationMessageFor(model => model.FacultyEmail, "", new { @class = "text-danger" })
                            <!-- <input type="email" class="form-control" id="inputEmail3" placeholder="Email">-->
                        </div>
                    </div>
                    <div class="form-group row ml-5 mt-3">
                        <!--<label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>-->
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-2 col-form-label", @id = "inputPassword3" })
                        <div class="col-sm-10">
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "inputPassword3", @placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                            <!--<input type="password" class="form-control" id="inputPassword3" placeholder="Password">-->
                        </div>
                    </div>
                    <div class="form-group row ml-5 mt-5">
                        <div class="col-lg-12">
                            <h6>New to Mail Pro ? Click here to @Html.ActionLink("SignUp", "Signup", "Account")</h6>
                        </div>
                    </div>
                    <div class="form-group row ml-5 mt-3">
                        <div class="col-lg-12">
                            <h6>@Html.ActionLink("Forgot Password?", "ForgotPassword", "Account")</h6>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 mt-n5 ml-n5">
                            <input type="submit" value="CONTINUE" id="btn" />
                        </div>
                    </div>
                    @*<div class="form-group row">
            <div class="col-sm-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Keep me logged in
                    </label>
                </div>
            </div>
        </div>*@

                    <!-- </form>-->

                </div>
            </div>
        </div>

    </body>
}
</html>