@model MailPro.Models.Membership

@{
    ViewBag.Title = "Signup";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIGNUP PAGE</title>
    <link rel="stylesheet" href="@Url.Content("../files/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("../css/signup.css")" type="text/css">

    <link rel="stylesheet" href="@Url.Content("../files/bootstrap.min.css")">


    <script src="@Url.Content("../files/jquery-3.4.1.min.js")"></script>
    <script src="@Url.Content("../files/bootstrap.min.js")"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*<script>
        function signup{
            alert("A verification link has been sent on your email i'd. click on it to access your account.");
        }
    </script>*@
</head>
@using (Html.BeginForm(new { @id = "" }))

{

    @Html.AntiForgeryToken()
    <body>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6" id="back">
                    <img src="../img/LOGO2.png" style="height: 70px" />
                    <div id="" class="text-white" style="font-family:Consolas, Andale Mono, Lucida Console, Lucida Sans Typewriter, Monaco, Courier New, monospace">Mail Pro</div>
                    <div class="welcome">
                        <div>Welcome!</div>
                        <div id="sign">Get started absolutely free.</div>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="signup"><b>SIGN UP</b></div>
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    
                    <div class="form-group row" style="padding-top:175px">
                        <!--<label for="inputName" class="col-sm-5 col-form-label">Enter Faculty Name</label>-->
                        @Html.LabelFor(model => model.FacultyName, htmlAttributes: new { @class = "col-sm-5 col-form-label", @id = "inputName" })
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.FacultyName, new
                       {
                           htmlAttributes = new
                                {
                                    @class = "form-control",
                                    @id = "inputName",
                                    @placeholder = "FacultyName"
                           }
                       })
                            @Html.ValidationMessageFor(model => model.FacultyName, "", new { @class = "text-danger" })

                            <!-- <input type="text" class="form-control" id="inputName" placeholder="Faculty Name">-->
                        </div>
                    </div>
                    <div class="form-group row">
                        <!--<label for="inputEmail" class="col-sm-5 col-form-label">Enter email address</label>-->
                        @Html.LabelFor(model => model.FacultyEmail, htmlAttributes: new { @class = "col-sm-5 col-form-label", @id = "inputEmail" })
                        <div class="col-sm-7">

                            @Html.EditorFor(model => model.FacultyEmail, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail", @placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.FacultyEmail, "", new { @class = "text-danger" })
                            @Html.ValidationMessage("Email exist", new { @class = "text-danger" })
                            <!-- <input type="email" class="form-control" id="inputEmail" placeholder="Email">-->
                        </div>
                    </div>
                    <div class="form-group row">
                        <!--<label for="inputPhone" class="col-sm-5 col-form-label">Enter Contact Number</label>-->
                        @Html.LabelFor(model => model.FacultyPhoneNo, htmlAttributes: new { @class = "col-sm-5 col-form-label", @id = "inputPhone" })
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.FacultyPhoneNo, new { htmlAttributes = new { @class = "form-control", @id = "inputPhone", @placeholder = "Contact number" } })
                            @Html.ValidationMessageFor(model => model.FacultyPhoneNo, "", new { @class = "text-danger" })
                            <!-- <input type="text" class="form-control" id="inputPhone" placeholder="Contact number">-->
                        </div>
                    </div>
                    <div class="form-group row">
                        <!--<label for="inputDept" class="col-sm-5 col-form-label">Enter Department Name</label>-->
                        @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "col-sm-5 col-form-label", @id = "inputDept" })
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control", @id = "inputDept", @placeholder = "Department Name" } })
                            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })    <!--<input type="text" class="form-control" id="inputDept" placeholder="Department Name">-->
                        </div>
                    </div>
                    <div class="form-group row">
                        <!-- <label for="inputPassword" class="col-sm-5 col-form-label">Password</label>-->
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-5 col-form-label", @id = "inputPassword" })
                        <div class="col-sm-7">
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "inputPassword", @placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <!-- <input type="password" class="form-control" id="inputPassword" placeholder="Password">-->
                        </div>

                    </div>
                    <div class="form-group row">
                        <!-- <label for="inputPassword" class="col-sm-5 col-form-label">Password</label>-->
                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "col-sm-5 col-form-label", @id = "inputPassword" })
                        <div class="col-sm-7">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "inputPassword", @placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            <!-- <input type="password" class="form-control" id="inputPassword" placeholder="Password">-->
                        </div>

                    </div>
                    <div class="form-group row">
                        <h6>Already had an Account ? Click here to @Html.ActionLink("Login", "Login", "Account")</h6>
                    </div>
